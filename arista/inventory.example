# Arista Networks Inventory Example
# Copy this file to your inventory directory and customize

[cvp]
cvp01 ansible_host=cvp.example.com

[arista_spine]
spine-01 ansible_host=192.168.1.1
spine-02 ansible_host=192.168.1.2

[arista_leaf]
leaf-01 ansible_host=192.168.1.10
leaf-02 ansible_host=192.168.1.11
leaf-03 ansible_host=192.168.1.12
leaf-04 ansible_host=192.168.1.13

[arista_switches:children]
arista_spine
arista_leaf

[arista:children]
cvp
arista_switches

[arista_switches:vars]
ansible_network_os=arista.eos.eos
ansible_connection=ansible.netcommon.httpapi
ansible_httpapi_use_ssl=true
ansible_httpapi_validate_certs=false
ansible_user={{ vault_arista_username }}
ansible_password={{ vault_arista_password }}
ansible_become=true
ansible_become_method=enable

[cvp:vars]
ansible_connection=local
cvp_host={{ ansible_host }}
cvp_username={{ vault_cvp_username }}
cvp_password={{ vault_cvp_password }}
cvp_validate_certs=false

# --- Fabric Settings ---
[arista_switches:vars]
arista_fabric_name=DC1-Fabric
arista_mlag_enabled=true
arista_vxlan_enabled=true
arista_evpn_enabled=true

# BGP Settings
arista_bgp_asn=65000
arista_bgp_router_id_prefix=10.0.0

# VXLAN Settings
arista_vxlan_vni_base=10000
arista_vtep_loopback=Loopback1
