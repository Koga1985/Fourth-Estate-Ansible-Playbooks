{
  "report_type": "ucs_monitoring",
  "generated_at": "{{ ansible_date_time.iso8601 }}",
  "ucs_domain": "{{ ucs_hostname }}",
  "fault_summary": {{ fault_summary | default({}) | to_nice_json }},
  "total_faults": {{ (fault_summary.critical | default(0) | int) + (fault_summary.major | default(0) | int) + (fault_summary.minor | default(0) | int) + (fault_summary.warning | default(0) | int) }},
  "health_status": "{% if fault_summary.critical | default(0) | int > 0 %}critical{% elif fault_summary.major | default(0) | int > 0 %}degraded{% else %}healthy{% endif %}",
  "compliance_frameworks": {{ compliance_frameworks | to_nice_json }}
}
