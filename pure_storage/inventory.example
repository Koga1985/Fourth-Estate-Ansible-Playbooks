# Pure Storage FlashArray Inventory Example
# Copy this file to your inventory directory and customize

[pure_flasharray]
pure-fa-01 ansible_host=192.168.1.90

[localhost]
localhost ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[pure_flasharray:vars]
fa_url={{ ansible_host }}
fa_api_token={{ vault_pure_fa_api_token }}

# --- Array Settings ---
pure_array_name=Production-FA

# --- Volume Settings ---
pure_default_volume_size=100G
pure_thin_provisioning=true

# --- Host Settings ---
pure_default_iscsi_iqn_prefix=iqn.2023-01.com.example

# --- Replication Settings ---
pure_replication_enabled=true
pure_target_array=pure-fa-dr
