# {{ ansible_managed }}
# PostgreSQL environment configuration

export PGDATA={{ postgresql_data_directory }}
export PGPORT={{ postgresql_port }}
export PATH={{ postgresql_bin_path }}:$PATH
export LD_LIBRARY_PATH=/usr/pgsql-{{ postgresql_version }}/lib:$LD_LIBRARY_PATH
export MANPATH=/usr/pgsql-{{ postgresql_version }}/share/man:$MANPATH

# Prompt customization
export PS1="[\u@\h:\w]$ "

# Default database connection settings
export PGDATABASE=postgres
export PGUSER=postgres

# Locale settings
export LC_ALL={{ postgresql_locale }}
export LANG={{ postgresql_locale }}
