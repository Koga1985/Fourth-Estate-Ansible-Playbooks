# NetApp ONTAP Inventory Example
# Copy this file to your inventory directory and customize

[netapp_clusters]
netapp-cluster-01 ansible_host=192.168.1.60

[localhost]
localhost ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[netapp_clusters:vars]
netapp_hostname={{ ansible_host }}
netapp_username={{ vault_netapp_username }}
netapp_password={{ vault_netapp_password }}
netapp_https=true
netapp_validate_certs=true

# --- Cluster Settings ---
netapp_cluster_name=Production-NetApp

# --- SVM Settings ---
netapp_svm_name=svm_prod

# --- Volume Defaults ---
netapp_volume_aggregate=aggr1
netapp_volume_space_guarantee=none
netapp_volume_snapshot_policy=default
