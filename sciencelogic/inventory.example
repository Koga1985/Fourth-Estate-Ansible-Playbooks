# ScienceLogic SL1 Inventory Example
# Copy this file to your inventory directory and customize

[sl1_database]
sl1-db-01 ansible_host=192.168.1.100

[sl1_admin]
sl1-admin-01 ansible_host=192.168.1.101

[sl1_collectors]
sl1-dc-01 ansible_host=192.168.1.110
sl1-dc-02 ansible_host=192.168.1.111
sl1-dc-03 ansible_host=192.168.1.112

[sl1_all:children]
sl1_database
sl1_admin
sl1_collectors

[localhost]
localhost ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[sl1_all:vars]
ansible_user=ansible
ansible_become=true
ansible_python_interpreter=/usr/bin/python3

# SL1 API Configuration
sl1_api_url=https://sl1-admin-01.example.com/api
sl1_api_user={{ vault_sl1_api_user }}
sl1_api_password={{ vault_sl1_api_password }}

# --- Platform Settings ---
sl1_version=11.3
sl1_timezone=America/New_York

# --- Data Retention ---
sl1_performance_data_retention_days=90
sl1_event_data_retention_days=365
sl1_log_data_retention_days=30

# --- ITSM Integration ---
sl1_itsm_enabled=true
sl1_itsm_type=servicenow
sl1_servicenow_instance=example.service-now.com
