# SL1 All-In-One Installation Configuration
INSTALL_TYPE=all-in-one
HOSTNAME={{ sl1_aio.hostname }}
IP_ADDRESS={{ sl1_aio.ip_address }}
NETMASK={{ sl1_aio.netmask }}
GATEWAY={{ sl1_aio.gateway }}
DNS_SERVERS={{ sl1_aio.dns_servers | join(',') }}
NTP_SERVERS={{ sl1_aio.ntp_servers | join(',') }}

# Admin Configuration
ADMIN_USER={{ sl1_setup_wizard.admin_user }}
ADMIN_PASSWORD={{ sl1_setup_wizard.admin_password }}
ADMIN_EMAIL={{ sl1_setup_wizard.admin_email }}

# Database Configuration
DB_ROOT_PASSWORD={{ sl1_db_server.root_password }}
INNODB_BUFFER_POOL_SIZE={{ sl1_system.mysql_innodb_buffer_pool_size }}

# System Configuration
JAVA_HEAP_SIZE={{ sl1_system.java_heap_size }}
ELASTICSEARCH_HEAP_SIZE={{ sl1_system.elasticsearch_heap_size }}

# Organization
ORGANIZATION={{ sl1_setup_wizard.organization }}
TIMEZONE={{ sl1_setup_wizard.timezone }}
LOCALE={{ sl1_setup_wizard.locale }}

# SSL Configuration
{% if sl1_ssl.enabled %}
SSL_ENABLED=yes
SSL_CERT_PATH={{ sl1_ssl.certificate_path }}
SSL_KEY_PATH={{ sl1_ssl.private_key_path }}
TLS_VERSION={{ sl1_ssl.tls_version }}
{% endif %}

# Fourth Estate Configuration
{% if fourth_estate.compliance_mode %}
COMPLIANCE_MODE=enabled
AUDIT_LOGGING=enabled
{% endif %}
