{
  "project_id": "{{ gcp_project_id }}",
  "project_name": "{{ gcp_project_name }}",
  "project_number": "{{ gcp_project.projectNumber | default('N/A') }}",
  "organization_id": "{{ gcp_organization_id | default('N/A') }}",
  "folder_id": "{{ gcp_folder_id | default('N/A') }}",
  "billing_account": "{{ gcp_billing_account_id | default('N/A') }}",
  "labels": {{ gcp_project_labels | to_nice_json }},
  "security_posture": {
    "deletion_protection": {{ gcp_enable_deletion_protection | bool }},
    "assured_workloads": {{ gcp_enable_assured_workloads | bool }},
    "vpc_service_controls": {{ gcp_enable_vpc_service_controls | bool }},
    "org_policies_enforced": {{ gcp_enforce_org_policies | bool }},
    "compliance_regime": "{{ gcp_assured_workload_regime | default('none') }}"
  },
  "enabled_apis": {{ gcp_required_apis | to_nice_json }},
  "data_residency": {
    "allowed_locations": {{ gcp_allowed_locations | to_nice_json }},
    "primary_region": "{{ gcp_assured_workload_location | default('us-east1') }}"
  },
  "contacts": {{ gcp_essential_contacts | to_nice_json }},
  "budget": {
    "enabled": {{ gcp_enable_budget_alerts | bool }},
    "monthly_amount": {{ gcp_budget_amount | default(0) }},
    "thresholds": {{ gcp_budget_thresholds | to_nice_json }}
  },
  "created_at": "{{ ansible_date_time.iso8601 }}",
  "managed_by": "Ansible Fourth Estate GCP Project Management",
  "fourth_estate_compliance": {
    "source_protection": true,
    "journalist_access_controls": true,
    "audit_retention_days": 365,
    "encryption_at_rest": "CMEK",
    "encryption_in_transit": "TLS 1.3+"
  }
}
