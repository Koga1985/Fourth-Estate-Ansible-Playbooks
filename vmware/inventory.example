# VMware vSphere Inventory Example
# Copy this file to your inventory directory and customize

[vcenter]
vcenter01 ansible_host=vcenter.example.com

[vcenter:vars]
ansible_connection=local
ansible_python_interpreter=/usr/bin/python3

# vCenter Authentication - use vault for credentials
vcenter_hostname={{ ansible_host }}
vcenter_username={{ vault_vcenter_username }}
vcenter_password={{ vault_vcenter_password }}
vcenter_validate_certs=true

# Datacenter configuration
vcenter_datacenter=DC1

# Default cluster for operations
vcenter_cluster=Production-Cluster

# --- ESXi Hosts ---
[esxi_hosts]
esxi01 ansible_host=192.168.1.10
esxi02 ansible_host=192.168.1.11
esxi03 ansible_host=192.168.1.12

[esxi_hosts:vars]
esxi_username={{ vault_esxi_username }}
esxi_password={{ vault_esxi_password }}
validate_certs=true

# --- VM Groups ---
[vm_linux]
# Linux VMs to be provisioned or managed

[vm_windows]
# Windows VMs to be provisioned or managed

# --- Cluster Configuration ---
[vmware_cluster:vars]
# DRS Settings
drs_enabled=true
drs_automation_level=fullyAutomated
drs_migration_threshold=3

# HA Settings
ha_enabled=true
ha_host_monitoring=enabled
ha_admission_control=true
ha_failover_hosts=1

# vSAN Settings (if applicable)
vsan_enabled=false
vsan_dedup_enabled=false
vsan_compression_enabled=true

# --- Network Configuration ---
[vmware_network:vars]
# Distributed Switch
dvs_name=Production-DVS
dvs_version=7.0.3

# Port Groups
portgroup_management=Management-PG
portgroup_vmotion=vMotion-PG
portgroup_production=Production-PG
portgroup_dmz=DMZ-PG

# VLANs
vlan_management=100
vlan_vmotion=200
vlan_production=300
vlan_dmz=400

# --- Storage Configuration ---
[vmware_storage:vars]
# Datastore Clusters
datastore_cluster=Production-SDRS

# Storage Policy
storage_policy_default=vSAN-Default
storage_policy_performance=vSAN-Performance

# --- Template Configuration ---
[vmware_templates:vars]
template_folder=/Templates
template_linux=rhel9-template
template_windows=win2022-template

# Customization specs
customization_linux=linux-customization
customization_windows=windows-customization

# --- STIG Compliance ---
[vmware_stig:vars]
apply_esxi_stig=true
apply_vm_stig=true
stig_version=V1R4
enable_audit_logging=true
