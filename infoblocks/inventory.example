# Infoblox Enterprise Inventory Example
# Copy this file to your inventory directory and customize

[infoblox_grid_master]
nios-gm ansible_host=192.168.1.50

[infoblox_grid_members]
nios-member-01 ansible_host=192.168.1.51
nios-member-02 ansible_host=192.168.1.52

[infoblox:children]
infoblox_grid_master
infoblox_grid_members

[localhost]
localhost ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[localhost:vars]
# Infoblox NIOS Configuration
nios_host=192.168.1.50
nios_username={{ vault_nios_username }}
nios_password={{ vault_nios_password }}
nios_wapi_version=2.12
nios_ssl_verify=true

# --- Grid Settings ---
nios_grid_name=Production-Grid

# --- DNS Settings ---
nios_dns_views:
  - name: internal
    comment: "Internal DNS view"
  - name: external
    comment: "External DNS view"

# --- DNSSEC Settings ---
nios_dnssec_enabled=true
nios_dnssec_algorithm=RSASHA256

# --- DHCP Failover ---
nios_dhcp_failover_enabled=true
nios_dhcp_failover_mode=load-balance

# --- RPZ Settings ---
nios_rpz_enabled=true
nios_rpz_feeds:
  - "threat-intelligence"

# --- Capacity Planning ---
nios_capacity_threshold=80
