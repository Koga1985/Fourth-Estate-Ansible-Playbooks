# Claroty xDome Inventory Example
# Copy this file to your inventory directory and customize

[localhost]
localhost ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[localhost:vars]
# Claroty xDome API Configuration
claroty_api_url=https://xdome.example.com/api
claroty_api_token={{ vault_claroty_api_token }}
claroty_verify_ssl=true

# --- Inventory Export Settings ---
claroty_inventory_export_format=csv
claroty_inventory_export_path=/var/lib/claroty/exports
claroty_cmdb_integration_enabled=true
claroty_cmdb_type=servicenow

# --- Alert/SIEM Integration ---
claroty_siem_enabled=true
claroty_siem_type=splunk
claroty_siem_host=splunk.example.com
claroty_siem_port=8088
claroty_siem_token={{ vault_claroty_siem_token }}

# --- Secure Access Settings ---
claroty_secure_access_enabled=true
claroty_session_timeout_minutes=60
claroty_mfa_required=true

# --- Segmentation Settings ---
claroty_segmentation_enabled=true
claroty_zone_model=purdue

# --- Vulnerability Settings ---
claroty_vuln_scan_enabled=true
claroty_vuln_severity_threshold=high

# --- Compliance Settings ---
claroty_compliance_framework=IEC62443
claroty_compliance_reporting_enabled=true
claroty_compliance_schedule="0 6 * * 1"
