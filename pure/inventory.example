# Pure Storage Inventory Example
# Copy this file to your inventory directory and customize

[pure_flasharray]
pure-fa-01 ansible_host=192.168.1.90

[pure_flashblade]
pure-fb-01 ansible_host=192.168.1.91

[pure_storage:children]
pure_flasharray
pure_flashblade

[localhost]
localhost ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[pure_flasharray:vars]
fa_url={{ ansible_host }}
fa_api_token={{ vault_pure_fa_api_token }}

# --- FlashArray Settings ---
fa_default_hostgroup=production-servers
fa_default_protection_group=daily-snapshots

[pure_flashblade:vars]
fb_url={{ ansible_host }}
fb_api_token={{ vault_pure_fb_api_token }}

# --- FlashBlade Settings ---
fb_default_filesystem=production-fs
