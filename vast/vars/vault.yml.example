---
# Vault file example - ENCRYPT THIS FILE WITH ansible-vault
# Command: ansible-vault encrypt vars/vault.yml
#
# Copy this file to vault.yml and encrypt it:
# cp vault.yml.example vault.yml
# ansible-vault encrypt vault.yml

# VAST Management Credentials
vault_vast_mgmt_host: "vast-mgmt.example.mil"
vault_vast_mgmt_user: "admin"
vault_vast_mgmt_password: "ChangeMe123!"

# LDAP/Active Directory
vault_ldap_server: "ldaps://ldap.example.mil"
vault_ldap_base_dn: "dc=example,dc=mil"
vault_ad_domain: "example.mil"

# SNMP Credentials
vault_vast_snmp_community: "SecureCommStr"
vault_vast_snmp_user: "snmpuser"

# Syslog Servers
vault_syslog_server_primary: "syslog1.example.mil"
vault_syslog_server_secondary: "syslog2.example.mil"

# SIEM Integration
vault_siem_server: "splunk.example.mil"

# DR Cluster Credentials
vault_vast_dr_cluster: "vast-dr.example.mil"
vault_vast_dr_user: "replication"
vault_vast_dr_password: "ChangeMe456!"

# Backup Destination
vault_backup_destination: "s3://backup-bucket/vast"
