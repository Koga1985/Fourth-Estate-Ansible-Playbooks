# Prometheus & Grafana Inventory Example
# Copy this file to your inventory directory and customize

[prometheus_servers]
prometheus-01 ansible_host=192.168.1.80

[grafana_servers]
grafana-01 ansible_host=192.168.1.81

[alertmanager_servers]
alertmanager-01 ansible_host=192.168.1.82

[monitoring:children]
prometheus_servers
grafana_servers
alertmanager_servers

[monitoring:vars]
ansible_user=ansible
ansible_become=true
ansible_python_interpreter=/usr/bin/python3

# --- Prometheus Settings ---
prometheus_version=2.47.0
prometheus_retention_time=30d
prometheus_storage_path=/var/lib/prometheus
prometheus_scrape_interval=15s

# --- Grafana Settings ---
grafana_version=10.2.0
grafana_admin_user=admin
grafana_admin_password={{ vault_grafana_admin_password }}
grafana_port=3000

# --- Alertmanager Settings ---
alertmanager_version=0.26.0
alertmanager_smtp_host=smtp.example.com
alertmanager_notification_email=alerts@example.com
