# Google Cloud Platform Enterprise Inventory Example
# Copy this file to your inventory directory and customize

[localhost]
localhost ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[localhost:vars]
# GCP Authentication
gcp_project={{ lookup('env', 'GCP_PROJECT') }}
gcp_auth_kind=serviceaccount
gcp_service_account_file={{ lookup('env', 'GOOGLE_APPLICATION_CREDENTIALS') }}

# Organization
gcp_organization_id={{ vault_gcp_org_id }}
gcp_billing_account={{ vault_gcp_billing_account }}

# Default region/zone
gcp_region=us-central1
gcp_zone=us-central1-a

# Environment
gcp_environment=production
gcp_org_prefix=myorg

# --- Landing Zone Settings ---
gcp_landing_zone_type=dod
gcp_enable_assured_workloads=true
gcp_compliance_regime=IL4

# --- IAM Settings ---
gcp_iam_audit_enabled=true
gcp_workload_identity_enabled=true

# --- Network Settings ---
gcp_vpc_name={{ gcp_org_prefix }}-{{ gcp_environment }}-vpc
gcp_enable_private_google_access=true
gcp_enable_vpc_flow_logs=true

# --- GKE Settings ---
gcp_gke_cluster_name={{ gcp_org_prefix }}-{{ gcp_environment }}-gke
gcp_gke_release_channel=STABLE
gcp_gke_enable_workload_identity=true
gcp_gke_enable_shielded_nodes=true
gcp_gke_enable_binary_authorization=true

# --- Security Settings ---
gcp_enable_cmek=true
gcp_kms_keyring_name=production-keyring
gcp_enable_vpc_service_controls=true

# --- Logging Settings ---
gcp_log_retention_days=365
gcp_enable_data_access_logs=true

# --- Budget Settings ---
gcp_budget_alert_threshold=80
gcp_budget_amount=10000
