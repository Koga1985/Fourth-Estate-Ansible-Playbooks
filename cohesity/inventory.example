# Cohesity Inventory Example
# Copy this file to your inventory directory and customize

[cohesity_cluster]
cohesity-01 ansible_host=192.168.1.200

[localhost]
localhost ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[cohesity_cluster:vars]
cohesity_server={{ ansible_host }}
cohesity_username={{ vault_cohesity_username }}
cohesity_password={{ vault_cohesity_password }}
cohesity_validate_certs=true
cohesity_domain=LOCAL

# --- Cluster Settings ---
cohesity_cluster_name=Production-Cohesity
cohesity_timezone=America/New_York

# --- Protection Settings ---
cohesity_default_policy=Gold-30Day
cohesity_sla_violation_alert=true

# --- Cloud Archive Settings ---
cohesity_cloud_archive_enabled=true
cohesity_cloud_target=aws-s3
cohesity_archive_retention_days=365

# --- Agent Settings ---
cohesity_agent_install_path=/opt/cohesity
cohesity_agent_auto_update=true
