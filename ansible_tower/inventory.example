# Ansible Tower Inventory Example
# Copy this file to your inventory directory and customize

[localhost]
localhost ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[localhost:vars]
# Tower Configuration
tower_hostname=tower.example.com
tower_username={{ vault_tower_username }}
tower_password={{ vault_tower_password }}
tower_validate_certs=true

# Organization
tower_organization=Default

# --- Project Settings ---
tower_project_scm_type=git
tower_project_scm_update_on_launch=true
tower_project_scm_branch=main

# --- Inventory Settings ---
tower_inventory_update_on_launch=true

# --- Job Template Settings ---
tower_job_template_ask_variables=true
tower_job_template_ask_limit=true
tower_job_template_ask_credential=true
