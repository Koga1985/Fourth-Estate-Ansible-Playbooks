# Check Point Inventory Example
# Copy this file to your inventory directory and customize

[checkpoint_mgmt]
cp-mgmt ansible_host=192.168.1.100

[checkpoint_gateways]
cp-gw-01 ansible_host=192.168.1.101
cp-gw-02 ansible_host=192.168.1.102

[checkpoint:children]
checkpoint_mgmt
checkpoint_gateways

[localhost]
localhost ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[checkpoint_mgmt:vars]
ansible_connection=httpapi
ansible_network_os=check_point.mgmt.checkpoint
ansible_httpapi_use_ssl=true
ansible_httpapi_validate_certs=false
checkpoint_domain=SMC User

# Management Server credentials
ansible_user={{ vault_checkpoint_username }}
ansible_password={{ vault_checkpoint_password }}

# API Settings
checkpoint_auto_publish_session=true
checkpoint_auto_install_policy=false

# --- Policy Settings ---
[checkpoint:vars]
checkpoint_policy_package=Standard
checkpoint_install_targets=["cp-gw-01", "cp-gw-02"]

# Identity Awareness
checkpoint_identity_awareness_enabled=true
checkpoint_ad_server=dc.example.com
checkpoint_ad_domain=EXAMPLE

# Threat Prevention
checkpoint_threat_prevention_enabled=true
checkpoint_ips_mode=Prevent
checkpoint_antivirus_enabled=true
checkpoint_antibot_enabled=true
