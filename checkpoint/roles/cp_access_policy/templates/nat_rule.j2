# Check Point NAT Rule Template
# Rule: {{ nat_rule.name }}
# Generated: {{ ansible_date_time.iso8601 }}
# Package: {{ policy_package }}

Name: {{ nat_rule.name }}
Position: {{ nat_rule.position | default('bottom') }}
Original Source: {{ nat_rule.original_source | default('Any') }}
Original Destination: {{ nat_rule.original_destination | default('Any') }}
Original Service: {{ nat_rule.original_service | default('Any') }}
Translated Source: {{ nat_rule.translated_source | default('Original') }}
Translated Destination: {{ nat_rule.translated_destination | default('Original') }}
Translated Service: {{ nat_rule.translated_service | default('Original') }}
Method: {{ nat_rule.method | default('hide') }}
{% if nat_rule.install_on is defined %}
Install On: {{ nat_rule.install_on | join(', ') }}
{% endif %}
Enabled: {{ nat_rule.enabled | default(true) | string | lower }}
{% if nat_rule.comments is defined %}
Comments: {{ nat_rule.comments }}
{% endif %}
