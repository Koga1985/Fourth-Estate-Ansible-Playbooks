# AWS Inventory Example
# Copy this file to your inventory directory and customize

[localhost]
localhost ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[localhost:vars]
# AWS Authentication - use environment variables or IAM roles preferred
# AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY should be set as env vars
# Or use AWS_PROFILE for named profiles

# Default region for operations
aws_region=us-east-1

# Environment tag for all resources
aws_environment=production

# Organization identifier for resource naming
aws_org_prefix=myorg

# Enable FedRAMP compliance mode
aws_fedramp_enabled=false

# Enable GovCloud mode (changes endpoints)
aws_govcloud_enabled=false

# --- Network Configuration ---
[aws_network:vars]
vpc_cidr=10.0.0.0/16
vpc_name={{ aws_org_prefix }}-{{ aws_environment }}-vpc
enable_dns_hostnames=true
enable_dns_support=true

# --- Compute Configuration ---
[aws_compute:vars]
ec2_instance_type=t3.medium
ec2_key_name={{ aws_org_prefix }}-{{ aws_environment }}-key
ec2_ami_id=ami-0123456789abcdef0

# --- EKS Configuration ---
[aws_eks:vars]
eks_cluster_name={{ aws_org_prefix }}-{{ aws_environment }}-eks
eks_kubernetes_version=1.28
eks_node_instance_type=t3.large
eks_node_desired_capacity=3

# --- Database Configuration ---
[aws_databases:vars]
rds_instance_class=db.t3.medium
rds_engine=postgres
rds_engine_version=15.4
rds_multi_az=true
rds_storage_encrypted=true

# --- S3 Configuration ---
[aws_storage:vars]
s3_versioning_enabled=true
s3_encryption_enabled=true
s3_block_public_access=true

# --- Security Configuration ---
[aws_security:vars]
enable_guardduty=true
enable_security_hub=true
enable_cloudtrail=true
cloudtrail_multi_region=true
kms_key_rotation=true
