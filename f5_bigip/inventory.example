# F5 BIG-IP Inventory Example
# Copy this file to your inventory directory and customize

[f5_bigip]
bigip-01 ansible_host=192.168.1.240 f5_ha_role=active
bigip-02 ansible_host=192.168.1.241 f5_ha_role=standby

[localhost]
localhost ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[f5_bigip:vars]
ansible_connection=local
f5_server={{ ansible_host }}
f5_username={{ vault_f5_username }}
f5_password={{ vault_f5_password }}
f5_validate_certs=false
f5_server_port=443

# --- HA Settings ---
f5_ha_enabled=true
f5_ha_sync_group=sync-failover-group

# --- Network Settings ---
f5_default_route_domain=0
f5_management_route=10.0.0.0/8

# --- Virtual Server Defaults ---
f5_vs_default_snat=automap
f5_vs_default_profiles=["http", "tcp"]

# --- SSL Settings ---
f5_ssl_cert_path=/var/ssl/certs
f5_ssl_key_path=/var/ssl/keys
f5_ssl_default_cipher=DEFAULT:!SSLv3:!TLSv1

# --- ASM Settings ---
f5_asm_enabled=true
f5_asm_default_policy=asm-production
f5_asm_blocking_mode=transparent

# --- Monitoring ---
f5_monitor_default_interval=5
f5_monitor_default_timeout=16
