# F5 BIG-IP Client SSL Profile Configuration Template
# Fourth Estate Production Standards
#
# This template can be used for reference or configuration export
# Adjust values according to your specific requirements

ltm profile client-ssl {{ profile_name | default('clientssl_secure') }} {
    app-service none
    cert-key-chain {
        default {
            cert {{ cert_name | default('default.crt') }}
            chain {{ chain_name | default('ca-bundle.crt') }}
            key {{ key_name | default('default.key') }}
        }
    }
    cipher-group none
    ciphers {{ ciphers | default('ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-SHA384:ECDHE-RSA-AES128-SHA256') }}
    defaults-from {{ parent_profile | default('clientssl') }}
    inherit-ca-certkeychain true
    inherit-certkeychain false
    key-type rsa-public
    mod-ssl-methods disabled
    mode enabled
    ocsp-stapling enabled
    options {
        no-sslv2
        no-sslv3
        no-tlsv1
        no-tlsv1.1
    }
    peer-cert-mode ignore
    renegotiation disabled
    secure-renegotiation require-strict
    server-name none
    session-ticket disabled
    sni-default {{ sni_default | default('false') }}
    sni-require {{ sni_require | default('false') }}
    ssl-c3d disabled
    ssl-forward-proxy disabled
    ssl-forward-proxy-bypass disabled
    ssl-sign-hash sha256
    strict-resume disabled
    tm-options {
        dont-insert-empty-fragments
    }
    unclean-shutdown enabled
}
