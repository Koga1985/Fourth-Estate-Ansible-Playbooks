################################
# Elasticsearch Environment
# Generated by Ansible
################################

# Elasticsearch home directory
ES_HOME={{ elasticsearch_home }}

# Elasticsearch configuration directory
ES_PATH_CONF={{ elasticsearch_config_dir }}

# Elasticsearch data directory
ES_PATH_DATA={{ elasticsearch_data_paths | join(',') }}

# Elasticsearch logs directory
ES_PATH_LOGS={{ elasticsearch_log_dir }}

# Elasticsearch PID directory
ES_PID_DIR={{ elasticsearch_pid_dir }}

# Elasticsearch temporary directory
ES_TMPDIR={{ elasticsearch_data_dir }}/tmp

{% if elasticsearch_java_home %}
# Java home directory
JAVA_HOME={{ elasticsearch_java_home }}
{% endif %}

# Heap size (set via JVM options)
# ES_JAVA_OPTS="-Xms{{ elasticsearch_heap_size_min }} -Xmx{{ elasticsearch_heap_size_max }}"

# User and group
ES_USER={{ elasticsearch_user }}
ES_GROUP={{ elasticsearch_group }}

# Startup timeout in seconds
ES_STARTUP_SLEEP_TIME=5

# Max open files
MAX_OPEN_FILES={{ elasticsearch_max_open_files }}

# Max locked memory
MAX_LOCKED_MEMORY={{ elasticsearch_max_locked_memory }}

# Maximum number of threads
MAX_MAP_COUNT={{ elasticsearch_max_map_count }}

# Fourth Estate specific settings
# Enable audit logging
ES_AUDIT_ENABLED={{ elasticsearch_audit_logging | lower }}

# Data retention period
ES_RETENTION_DAYS={{ elasticsearch_retention_days }}
