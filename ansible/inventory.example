# Ansible Automation Platform Inventory Example
# Copy this file to your inventory directory and customize

[localhost]
localhost ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[localhost:vars]
# AAP Controller Configuration
controller_hostname=aap.example.com
controller_username={{ vault_controller_username }}
controller_password={{ vault_controller_password }}
controller_validate_certs=true

# Private Automation Hub Configuration
ah_hostname=hub.example.com
ah_username={{ vault_ah_username }}
ah_password={{ vault_ah_password }}
ah_validate_certs=true

# --- Organization Settings ---
aap_organization=Default
aap_default_execution_environment=Default execution environment

# --- Credential Types ---
aap_credential_types:
  - machine
  - source_control
  - vault
  - cloud

# --- Project Settings ---
aap_default_scm_type=git
aap_default_scm_branch=main
aap_project_update_on_launch=true

# --- Inventory Settings ---
aap_inventory_update_on_launch=true
aap_inventory_update_cache_timeout=3600

# --- Job Settings ---
aap_job_timeout=3600
aap_job_verbosity=0
aap_allow_simultaneous=false

# --- Execution Environment Settings ---
aap_ee_registry=hub.example.com
aap_ee_default_image=ee-supported-rhel8:latest

# --- SSO/Directory Integration ---
aap_sso_enabled=true
aap_sso_provider=saml
aap_ldap_enabled=false

# --- Backup Settings ---
aap_backup_enabled=true
aap_backup_schedule="0 2 * * *"
aap_backup_retention_days=30

# --- Audit Settings ---
aap_activity_stream_enabled=true
aap_activity_stream_retention_days=365
