---
# Illumio PCE Runtime Environment Configuration
# Generated by Ansible

# Node Configuration
node_type: {{ 'snc0' if not illumio_pce_cluster_mode else 'core' }}
{% if illumio_pce_cluster_mode | bool %}
cluster_mode: true
node_id: {{ groups['illumio_pce_cluster'].index(inventory_hostname) + 1 }}
{% endif %}

# Network Configuration
pce_fqdn: {{ illumio_pce_fqdn }}
front_end_https_port: {{ illumio_pce_port }}
front_end_management_https_port: {{ illumio_pce_port + 2 }}

# Database Configuration
database_host: {{ illumio_pce_database_host }}
database_port: {{ illumio_pce_database_port }}
database_name: {{ illumio_pce_database_name }}

# Performance Tuning
web_service_workers: 8
api_service_workers: 8
event_service_workers: 4

# Logging Configuration
log_level: info
audit_event_logger: file
audit_event_min_severity: informational

# Session Configuration
session_timeout: 3600
max_concurrent_sessions: 100

# Security Settings
enforce_strong_passwords: true
password_min_length: 12
password_require_uppercase: true
password_require_lowercase: true
password_require_digit: true
password_require_special_char: true
password_expiration_days: 90
