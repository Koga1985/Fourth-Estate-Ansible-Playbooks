# PostgreSQL Client Authentication Configuration
# Generated by Ansible for Illumio PCE

# TYPE  DATABASE        USER            ADDRESS                 METHOD

# "local" is for Unix domain socket connections only
local   all             all                                     peer

# IPv4 local connections:
host    all             all             127.0.0.1/32            md5

# IPv6 local connections:
host    all             all             ::1/128                 md5

# PCE database connections
host    {{ illumio_pce_database_name }}    {{ illumio_pce_database_user }}    {{ ansible_default_ipv4.address }}/32    md5

# Cluster node connections (if HA mode)
{% if illumio_pce_cluster_mode | bool %}
{% for node in illumio_pce_cluster_nodes %}
host    {{ illumio_pce_database_name }}    {{ illumio_pce_database_user }}    {{ node }}/32    md5
host    replication     {{ illumio_pce_database_user }}    {{ node }}/32    md5
{% endfor %}
{% endif %}

# Allow connections from localhost
host    all             all             127.0.0.1/32            md5
host    all             all             ::1/128                 md5
