# Illumio Inventory Example
# Copy this file to your inventory directory and customize

[illumio_pce]
illumio-pce ansible_host=pce.example.com

[localhost]
localhost ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[localhost:vars]
# Illumio PCE API Configuration
illumio_pce_url=https://pce.example.com:8443
illumio_api_user={{ vault_illumio_api_user }}
illumio_api_key={{ vault_illumio_api_key }}
illumio_org_id=1

# --- VEN Fleet Settings ---
illumio_ven_version=latest
illumio_ven_activation_type=pairing

# --- Policy Settings ---
illumio_policy_version=draft
illumio_enforcement_mode=visibility_only

# --- Label Settings ---
illumio_labels:
  - type: app
    values: ["web", "api", "database"]
  - type: env
    values: ["production", "staging", "development"]
  - type: loc
    values: ["dc1", "dc2", "cloud"]
