---
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-ingress-controller
  namespace: {{ item }}
  labels:
    app.kubernetes.io/managed-by: ansible
    security.fourth-estate.io/policy-type: allow-ingress
spec:
  podSelector:
    matchLabels:
      network-policy: allow-ingress
  policyTypes:
    - Ingress
  ingress:
    - from:
        - namespaceSelector:
            matchLabels:
              kubernetes.io/metadata.name: {{ k8s_network_policy_ingress_namespace }}
          podSelector:
            matchLabels:
              {{ k8s_network_policy_ingress_selector | to_nice_yaml | indent(14) }}
      ports:
        - protocol: TCP
          port: 80
        - protocol: TCP
          port: 443
        - protocol: TCP
          port: 8080
