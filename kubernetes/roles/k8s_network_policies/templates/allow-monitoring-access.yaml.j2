---
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-monitoring-access
  namespace: {{ item }}
  labels:
    app.kubernetes.io/managed-by: ansible
    security.fourth-estate.io/policy-type: allow-monitoring
spec:
  podSelector: {}
  policyTypes:
    - Ingress
  ingress:
    - from:
        - namespaceSelector:
            matchLabels:
              kubernetes.io/metadata.name: {{ k8s_network_policy_monitoring_namespace }}
          podSelector:
            matchLabels:
              {{ k8s_network_policy_monitoring_selector | to_nice_yaml | indent(14) }}
      ports:
        - protocol: TCP
          port: 8080  # Metrics port
        - protocol: TCP
          port: 9090  # Prometheus port
