---
apiVersion: node.k8s.io/v1
kind: RuntimeClass
metadata:
  name: {{ item.name }}
  labels:
    app.kubernetes.io/managed-by: ansible
handler: {{ item.handler }}
{% if item.scheduling is defined %}
scheduling:
  nodeSelector:
    {{ item.scheduling.nodeSelector | to_nice_yaml | indent(4) }}
{% endif %}
