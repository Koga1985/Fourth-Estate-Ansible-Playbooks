# Tenable Plugin Feed Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

# Plugin Feed URL
feed_url={{ tsc_plugin_feed_url }}

# Auto Update Settings
auto_update={{ tsc_auto_plugin_update | lower }}
update_hour={{ tsc_plugin_update_hour }}
update_minute={{ tsc_plugin_update_minute }}

# Proxy Settings (if needed)
{% if tsc_proxy_url is defined %}
proxy_url={{ tsc_proxy_url }}
{% if tsc_proxy_username is defined %}
proxy_username={{ tsc_proxy_username }}
proxy_password={{ tsc_proxy_password }}
{% endif %}
{% endif %}

# Air-Gapped Settings
{% if tsc_fourth_estate.air_gapped %}
air_gapped=true
offline_feed_path={{ tsc_data_dir }}/plugin_feed
{% endif %}

# Update Options
verify_ssl=true
retry_count=3
retry_delay=300
timeout=600
