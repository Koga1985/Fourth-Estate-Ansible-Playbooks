# Azure Inventory Example
# Copy this file to your inventory directory and customize

[localhost]
localhost ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[localhost:vars]
# Azure Authentication - use environment variables or managed identity preferred
# AZURE_SUBSCRIPTION_ID, AZURE_CLIENT_ID, AZURE_SECRET, AZURE_TENANT should be set as env vars
# Or use managed identity when running from Azure VMs

# Subscription and tenant
azure_subscription_id={{ lookup('env', 'AZURE_SUBSCRIPTION_ID') }}
azure_tenant_id={{ lookup('env', 'AZURE_TENANT') }}

# Default location for resources
azure_location=eastus

# Environment tag for all resources
azure_environment=production

# Organization identifier for resource naming
azure_org_prefix=myorg

# Resource group naming convention
azure_resource_group={{ azure_org_prefix }}-{{ azure_environment }}-rg

# Enable Azure Government mode
azure_government_enabled=false

# --- Network Configuration ---
[azure_network:vars]
vnet_name={{ azure_org_prefix }}-{{ azure_environment }}-vnet
vnet_address_space=10.0.0.0/16
subnet_default_prefix=10.0.1.0/24
enable_ddos_protection=false
enable_service_endpoints=true

# --- Compute Configuration ---
[azure_compute:vars]
vm_size=Standard_D2s_v3
vm_admin_username=azureadmin
vm_os_disk_type=Premium_LRS
enable_boot_diagnostics=true
enable_managed_identity=true

# --- AKS Configuration ---
[azure_aks:vars]
aks_cluster_name={{ azure_org_prefix }}-{{ azure_environment }}-aks
aks_kubernetes_version=1.28
aks_node_vm_size=Standard_D4s_v3
aks_node_count=3
aks_enable_rbac=true
aks_network_plugin=azure
aks_network_policy=calico

# --- Database Configuration ---
[azure_databases:vars]
sql_server_version=12.0
sql_admin_login=sqladmin
postgresql_version=15
mysql_version=8.0
enable_geo_redundant_backup=true

# --- Storage Configuration ---
[azure_storage:vars]
storage_account_tier=Standard
storage_account_replication=GRS
storage_account_kind=StorageV2
enable_blob_versioning=true
enable_soft_delete=true
soft_delete_retention_days=30

# --- Security Configuration ---
[azure_security:vars]
enable_defender=true
enable_sentinel=true
enable_key_vault=true
key_vault_sku=standard
enable_private_endpoints=true
enable_encryption_at_rest=true
