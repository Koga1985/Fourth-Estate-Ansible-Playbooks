# Fortinet Inventory Example
# Copy this file to your inventory directory and customize

[fortigate]
fg-01 ansible_host=192.168.1.250
fg-02 ansible_host=192.168.1.251

[fortimanager]
fmg-01 ansible_host=192.168.1.260

[fortinet:children]
fortigate
fortimanager

[fortigate:vars]
ansible_network_os=fortinet.fortios.fortios
ansible_connection=httpapi
ansible_httpapi_use_ssl=true
ansible_httpapi_validate_certs=false
ansible_httpapi_port=443
fortios_access_token={{ vault_fortios_token }}

# --- System Settings ---
fortios_hostname_prefix=FG
fortios_timezone=America/New_York

# --- Interface Settings ---
fortios_wan_interface=wan1
fortios_lan_interface=lan

# --- HA Settings ---
fortios_ha_enabled=true
fortios_ha_mode=a-p
fortios_ha_group_name=FG-HA-Cluster

[fortimanager:vars]
ansible_network_os=fortinet.fortimanager.fortimanager
ansible_connection=httpapi
ansible_httpapi_use_ssl=true
ansible_httpapi_validate_certs=false
fortimanager_access_token={{ vault_fmg_token }}
