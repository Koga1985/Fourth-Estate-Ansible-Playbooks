# HashiCorp Vault Inventory Example
# Copy this file to your inventory directory and customize

[vault_servers]
vault-01 ansible_host=192.168.1.30 vault_node_id=vault-1
vault-02 ansible_host=192.168.1.31 vault_node_id=vault-2
vault-03 ansible_host=192.168.1.32 vault_node_id=vault-3

[vault_servers:vars]
ansible_user=ansible
ansible_become=true
ansible_python_interpreter=/usr/bin/python3

# Vault cluster configuration
vault_cluster_name=production-vault
vault_api_addr=https://vault.example.com:8200
vault_cluster_addr=https://{{ ansible_host }}:8201

# Storage backend
vault_storage_backend=raft
vault_raft_data_dir=/opt/vault/data

# TLS Configuration
vault_tls_enabled=true
vault_tls_cert_file=/opt/vault/tls/vault.crt
vault_tls_key_file=/opt/vault/tls/vault.key
vault_tls_ca_file=/opt/vault/tls/ca.crt

# Auto-unseal (optional)
vault_auto_unseal_enabled=false
vault_seal_type=shamir

[localhost]
localhost ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[localhost:vars]
# Vault API access
vault_addr=https://vault.example.com:8200
vault_token={{ vault_root_token }}
vault_skip_verify=false

# --- Auth Methods ---
vault_auth_methods:
  - type: ldap
    path: ldap
  - type: approle
    path: approle
  - type: kubernetes
    path: kubernetes

# --- Secrets Engines ---
vault_secrets_engines:
  - type: kv
    path: secret
    options:
      version: 2
  - type: database
    path: database
  - type: pki
    path: pki
  - type: transit
    path: transit

# --- Audit Settings ---
vault_audit_enabled=true
vault_audit_file_path=/var/log/vault/audit.log
vault_audit_log_raw=false
