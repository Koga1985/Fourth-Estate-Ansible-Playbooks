# Palo Alto Networks Inventory Example
# Copy this file to your inventory directory and customize

[panorama]
panorama-01 ansible_host=192.168.1.70

[panos_firewalls]
pa-fw-01 ansible_host=192.168.1.71 panos_serial=00000001
pa-fw-02 ansible_host=192.168.1.72 panos_serial=00000002

[paloalto:children]
panorama
panos_firewalls

[localhost]
localhost ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[paloalto:vars]
ansible_connection=local

# PAN-OS Provider
panos_provider:
  ip_address: "{{ ansible_host }}"
  username: "{{ vault_panos_username }}"
  password: "{{ vault_panos_password }}"

# --- Panorama Settings ---
[panorama:vars]
panorama_device_group=Production-DG
panorama_template_stack=Production-TS

# --- Firewall Settings ---
[panos_firewalls:vars]
panos_vsys=vsys1

# --- Network Settings ---
[paloalto:vars]
panos_zone_trust=trust
panos_zone_untrust=untrust
panos_zone_dmz=dmz

# --- Security Settings ---
panos_default_log_profile=default
panos_url_filtering_profile=default-url
panos_threat_prevention_profile=strict

# --- VPN Settings ---
panos_ipsec_crypto_profile=Suite-B-GCM-128
panos_ike_crypto_profile=Suite-B-GCM-128

# --- SSL Decryption ---
panos_ssl_decryption_enabled=true
panos_ssl_forward_proxy=true
